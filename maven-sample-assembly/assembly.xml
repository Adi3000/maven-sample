<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>assembly-demo</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
      <fileSet>
      	<directory>src/main/resources</directory>
        <includes>
          <include>**</include>
        </includes>
        <outputDirectory>./</outputDirectory>
		<filtered>true</filtered>
	  </fileSet>
	</fileSets>
	<dependencySets>
	  <dependencySet>
	  		<includes>
	  			<include>of:OFJCAModule:zip:serverlib</include>
	  		</includes>
	  		<unpack>true</unpack>
	  		<outputDirectory>./lib</outputDirectory>
	  		<useTransitiveDependencies>false</useTransitiveDependencies>
	  </dependencySet>
	  <dependencySet>
			<includes>
				<include>fr.it-toolbox.utils.installer:installer-tool-lib:jar:*</include>
			</includes>
			<outputDirectory>./lib/jar</outputDirectory>
			<outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
		</dependencySet>
		<dependencySet>
		  		<includes>
		  			<include>it-toolbox:installer-tool:zip:STANDALONE</include>
		  		</includes>
		  		<unpack>true</unpack>
		  		<unpackOptions>
			        <excludes>
			        	<exclude>BIN/install/installProduct.properties</exclude>
			        	<exclude>BIN/install/sub/core-mapping.xml</exclude>
			        	<exclude>BIN/install/sub/corestruction.txt</exclude>
			        	<exclude>BIN/install/sub/instructions.txt</exclude>
			        	<exclude>bin/install/sub/lib/jar/installer-tool-lib.jar</exclude>
			       	 </excludes>
		  		</unpackOptions>
		  		<useTransitiveDependencies>false</useTransitiveDependencies>
		  </dependencySet>
	</dependencySets>
</assembly>
